{% extends "themes/app.twig" %}

{% block title "Login" %}

{% block content %}
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-md-12" style="color:#fff"><div class="container hero">
		<strong>Welcome to twiggy</strong>
		<br/>
		<small> Twiggy adalah forum komunitas introvert indonesia</small>
	  </div>
      
        <a href="/tanya" style="padding:5px 15px;color#fff;background:#3541b5;color:#fff;margin-top:10px">tanya</a>
        </div>
      
      <div class="col-md-12">
        <div class="explode">
          
          {% for discuss in discusses %}
           
          
          <div class="topics"><a href="/topic/{{ discuss.slug }}">
            {{ discuss.topic|raw }}
            <span class="meta-time">{{ discuss.user.username }} . {{ discuss.created_at }}</span>
             {{ tags(discuss.tags)|raw }} 
            </a>
          </div>
          {% endfor %}
          </div>
      {% if pagination.needed %}
        
    <ul class="pagination pagination-sm">
        {% for i in 1..pagination.lastpage %}
            <li class="{% if i == pagination.page %}active{% endif %}"><a href="?page={{ i }}">{{ i }}</a></li>
        {% endfor %}
    </ul>
      {% endif %}
        
        </div>
      </div>
     </div>
  </div>
  
  {% endblock %}

  
{% block footer %}

  {{ parent() }}
  <script src="/public/assets/js/app.login.js"></script>
{% endblock %}