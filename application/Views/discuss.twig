{% extends "themes/app.twig" %}

{% block title "twiggy discussions" %}

{% block content %}
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div style="color:#fff"><div class="container hero">
		<strong>Welcome to twiggy</strong>
		<br/>
		<small> Twiggy adalah forum komunitas introvert indonesia</small>
	  </div>
      <div class="separator" style="margin:10px"></div>
        <a href="/tanya" style="padding:5px 15px;color#fff;background:#3541b5;color:#fff;margin-top:10px">post discussion</a>
        </div>
      
      <div class="col-md-12">
        <div class="explode">
          
          {% for discuss in discusses %}
           
          
          <div class="topics"><a href="/topic/{{ discuss.slug }}">
            {{ discuss.topic|raw }}
            <span class="meta-time"><span class="glyphicon glyphicon-user"></span> {{ discuss.user.username }} . <span class="glyphicon glyphicon-time"></span> {{ discuss.created_at }}</span>
          {% if discuss.tags != '' %}
            {{ tags(discuss.tags)|raw }}
           {% endif %}
            </a>
          </div>
          {% endfor %}
          </div>
          
        {% include 'partials/pagination.twig' with pagination %}
      
      
        </div>
      </div>
     </div>
  </div>
  
  {% endblock %}

  
{% block footer %}

  {{ parent() }}
  <script src="/public/assets/js/app.login.js"></script>
{% endblock %}